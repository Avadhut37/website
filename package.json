{
  "name": "istudiox-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:backend": "cd backend && /workspaces/website/.venv/bin/uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "test": "cd backend && /workspaces/website/.venv/bin/pytest tests/ -v",
    "test:watch": "cd backend && /workspaces/website/.venv/bin/pytest tests/ -v --watch",
    "status": "bash check-status.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
